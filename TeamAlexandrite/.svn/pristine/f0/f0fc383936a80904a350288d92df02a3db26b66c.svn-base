<Window x:Class="TeamWPF.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CourierManager;assembly=CourierManager"
        Title="CompanyWindow" Height="350" Width="500"
        Background="BlanchedAlmond"
        BorderBrush="Black"
        Topmost="True">
    <Grid Name="CompanyGridRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40" Name="StatuteRow"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120">
            </ColumnDefinition>
            <ColumnDefinition Width="370">
            </ColumnDefinition>
        </Grid.ColumnDefinitions>     
        <Label Name="CourierManager"
               Visibility="Visible"
               Background="Beige"
               Content="Courier Manager"
               FontSize="15"
               FontStyle="Italic"/>
        <Label Name="RecipientType"
               Visibility="Collapsed"
               Background="Beige"
               Content="Recipient"
               FontSize="20"
               FontStyle="Italic"/>
        <Menu Name="EmployeeType" Background="BlanchedAlmond" Grid.Column="1" AllowDrop="True" Width="360">
            <MenuItem Height="40" Width="360" Name="DefaultType" FontSize="15" HorizontalAlignment="Center" >
                <MenuItem.Header>
                    <HeaderedContentControl Header="Emplyee Type" FontSize="15" HorizontalAlignment="Center"/>
                </MenuItem.Header>
                <MenuItem Header="Customer Service" Name="CustomerService" Margin="0,0,-4,0" Click="ProcessEmployeeType" />
                <MenuItem Header="Driver" Name="Driver" Margin="0,0,-4,0" Click="ProcessEmployeeType"/>
                <MenuItem Header="Accountant" Name="Accountant" Margin="0,0,-4,0" Click="ProcessEmployeeType"/>
                <MenuItem Header="Manager" Name="Manager" Margin="0,0,-4,0" Click="ProcessEmployeeType"/>
            </MenuItem>
        </Menu>

        <Label
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Row="1" 
            Grid.Column="0"
            Visibility="Visible"
            Name="FistName"
            Content="Fist Name:"/>
        <Label BorderBrush="Black"
               BorderThickness="1"
               Grid.Row="2" 
               Grid.Column="0"
               Visibility="Visible"
               Name="LastName"
               Content="Last Name:"
               />
        <Label
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Row="3" 
            Grid.Column="0"
            Visibility="Visible"
            Name="EmployeeAddress"
            Content="Address:"/>      
        <Label 
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Row="4" 
            Grid.Column="0"
            Visibility="Visible"
            Name="IDNumber"
            Content="ID Number:"/>
        <Label 
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Row="5" 
            Grid.Column="0"
            Visibility="Visible"
            Name="Phone"
            Content="Phone:"/>
        <Label 
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Row="6" 
            Grid.Column="0"
            Visibility="Visible"
            Name="Salary"
            Content="Salary:"/>
        <Label Grid.Row="1" 
               Name="NewEmployeeFirstName"
               BorderBrush="Black"
               BorderThickness="1"
               Content="First Name:"
               Visibility="Collapsed"/>
        <Label Grid.Row="2" 
               Name="NewEmployeeLastName"
               BorderBrush="Black"
               BorderThickness="1"
               Content="Last Name:"
               Visibility="Collapsed"/>
        <Label Grid.Row="3"
               Name="NewEmployeeAddress"
               BorderBrush="Black"
               BorderThickness="1"
               Content="Adress:"
               Visibility="Collapsed"/>
        <Label Grid.Row="4"
               Name="NewEmployeeID"
               BorderBrush="Black"
               BorderThickness="1"
               Content="ID Number:"
               Visibility="Collapsed"/>
        <Label Grid.Row="5"
               Name="NewEmployeePhone"
               BorderBrush="Black"
               BorderThickness="1"
               Content="Phone:"
               Visibility="Collapsed"/>
        <Label Grid.Row="6"
               Name="NewEmployeeSalary"
               BorderBrush="Black"
               BorderThickness="1"
               Content="Salary:"
               Visibility="Collapsed"/>
        <TextBox Grid.Row="1"
                 Grid.Column="1"
                 Name="NewEmployeeFirstNameInput"
                 FontWeight="Black"
                 FontSize="20"
                 Background="Azure"
                 Visibility="Visible"
                 />
        <TextBox Grid.Row="2"
                 Grid.Column="1"
                 Name="NewEmployeeLastNameInput"
                 FontWeight="Black"
                 FontSize="20"
                 Background="Azure"
                 Visibility="Visible"
                 />
        <TextBox Grid.Row="3"
                 Grid.Column="1"
                 Name="NewEmployeeAddressInput"
                 FontWeight="Black"
                 FontSize="20"
                 Background="Azure"
                 Visibility="Visible"
                 />
        <TextBox Grid.Row="4"
                 Grid.Column="1"
                 Name="NewEmployeeIDInput"
                 FontWeight="Black"
                 FontSize="20"
                 Background="Azure"
                 Visibility="Visible"
                 />
        <TextBox Grid.Row="5"
                 Grid.Column="1"
                 Name="NewEmployeePhoneInput"
                 FontWeight="Black"
                 FontSize="20"
                 Background="Azure"
                 Visibility="Visible"
                 />
        <TextBox Grid.Row="6"
                 Grid.Column="1"
                 Name="NewEmployeeSalaryInput"
                 FontWeight="Black"
                 FontSize="20"
                 Background="Azure"
                 Visibility="Visible"
                 />            
        <Button  Name="SubmitEmployeeData" Content="SUBMIT" Background="LightGray"  FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="94" Grid.Column="1" Margin="217,5,0,0" Grid.Row="8"/>
    </Grid>

</Window>
    