<Window x:Class="TeamWPF.CompanyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CourierManager;assembly=CourierManager"
        Title="CompanyWindow" Height="350" Width="500"
        Background="BlanchedAlmond"
        BorderBrush="Black"
        Topmost="True">
    <Grid Name="CompanyGridRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40" Name="StatuteRow"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120">
            </ColumnDefinition>
            <ColumnDefinition Width="370">
            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Menu Background="BlanchedAlmond"  Grid.Row="5" Grid.Column="1" AllowDrop="True" Width="360">
            <MenuItem Height="40" Width="360" Name="DefaultStatute" FontSize="15" HorizontalAlignment="Center" >
                <MenuItem.Header>
                    <HeaderedContentControl Header="NEW" FontSize="15" HorizontalAlignment="Center"/>
                </MenuItem.Header>
                <MenuItem Header="NEW" Name="NewClient" Margin="0,0,-4,0" Click="ProcesssCompanyStatute"/>
                <MenuItem Header="WITH PREFERENCES" Name="ClientWithPreferences" Margin="0,0,-4,0" Click="ProcesssCompanyStatute"/>
                <MenuItem Header="VIP" Name="VIPClient" Margin="0,0,-4,0" Click="ProcesssCompanyStatute"/>
                
            </MenuItem>
        </Menu>
        <Label Grid.Column="1" Content="Company Form" FontSize="20"/>
        <Label BorderBrush="Black"
               BorderThickness="1"
               Grid.Row="2" 
               Grid.Column="0"
               Visibility="Visible"
               Name="CompanyName"
               Content="Company Name:"
               />
        <Label
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Row="3" 
            Grid.Column="0"
            Visibility="Visible"
            Name="CompanyAddress"
            Content="Address:"/>
        <Label
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Row="1" 
            Grid.Column="0"
            Visibility="Visible"
            Name="CompanyID"
            Content="ID Number:"/>
        <Label 
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Row="4" 
            Grid.Column="0"
            Visibility="Visible"
            Name="CompanyPhone"
            Content="Phone:"/>
        <Label 
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Row="5" 
            Grid.Column="0"
            Visibility="Visible"
            Name="CompanyStatute"
            Content="Statute:"/>
        <TextBox
            Name="CompanyNameInput"
            Visibility="Visible"
            FontWeight="Black"
            FontSize="20"
            Background="Azure"
            Text=""
            TextDecorations=""
            Grid.Row="2"
            Grid.Column="1"
            />
        <TextBox
            Name="CompanyAddressInput"
            Visibility="Visible"
            FontWeight="Black"
            FontSize="20"
            Background="Azure"
            Text=""
            TextDecorations=""
            Grid.Row="3"
            Grid.Column="1"
            />
        <TextBox
            Name="CompanyIDNumberInput"
            Visibility="Visible"
            FontWeight="Black"
            FontSize="20"
            Background="Azure"
            Text=""
            TextDecorations=""
            Grid.Row="1"
            Grid.Column="1"
            LostFocus="CompanyIDNumberLostFocus"
            />
        <TextBox
            Name="CompanyPhoneInput"
            Visibility="Visible"
            FontWeight="Black"
            FontSize="20"
            Background="Azure"
            Text=""
            TextDecorations=""
            Grid.Row="4"
            Grid.Column="1"
            />
        <Button Name="SubmitCompanyData" Content="SUBMIT" Background="LightGray"  FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="95" Grid.Column="1" Margin="218,10,0,-15" Grid.Row="6"/>
    </Grid>
    
</Window>
