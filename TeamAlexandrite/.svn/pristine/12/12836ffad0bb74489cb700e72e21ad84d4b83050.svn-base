<Window x:Class="TeamWPF.IndividualWindow" Name="individualform"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CourierManager;assembly=CourierManager"
        Title="IndividualWindow" Height="350" Width="500"
        Background="BlanchedAlmond"
        BorderBrush="Black"
        Topmost="True"
        Closing="OnCloseIndividualWindow">
    <Grid Name="IndividualGridRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120">
            </ColumnDefinition>
            <ColumnDefinition Width="370">
            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Name="IndividualForm" Grid.Column="1" FontSize="20" Content="Individual Form" Visibility="Visible"/>
        <Menu Width="370" Name="RecipientTypeMenu" FontSize="20" HorizontalAlignment="Center" Grid.Column="1" Visibility="Collapsed" Background="Beige">
            <MenuItem Width="370" Name="RecipientMenuHeader" Header="Client Type">
                <MenuItem Name="IndividualRecipient" Header="Individual" Click="ChangeRecipientType"/>
                <MenuItem Name="CompanyRecipient" Header="Company" Click="ChangeRecipientType"/>
            </MenuItem>
        </Menu>
        <Label Grid.Row="1" 
               Name="IndividualRecipientFirstName"
               BorderBrush="Black"
               BorderThickness="1"
               Content="First Name:"
               Visibility="Collapsed"/>
        <Label Grid.Row="2" 
               Name="IndividualRecipientLastName"
               BorderBrush="Black"
               BorderThickness="1"
               Content="Last Name:"
               Visibility="Collapsed"/>
        <Label Grid.Row="3"
               Name="IndividualRecipientAddress"
               BorderBrush="Black"
               BorderThickness="1"
               Content="Adress:"
               Visibility="Collapsed"/>
        <Label Grid.Row="4"
               Name="IndividualRecipientPhone"
               BorderBrush="Black"
               BorderThickness="1"
               Content="Phone:"
               Visibility="Collapsed"/>
        <TextBox Grid.Row="1"
                 Grid.Column="1"
                 Name="IndividualRecipientFirstNameInput"
                 FontWeight="Black"
                 FontSize="20"
                 Background="Azure"
                 Visibility="Collapsed"
                 />
        <TextBox Grid.Row="2"
                 Grid.Column="1"
                 Name="IndividualRecipientLastNameInput"
                 FontWeight="Black"
                 FontSize="20"
                 Background="Azure"
                 Visibility="Collapsed"
                 />
        <TextBox Grid.Row="3"
                 Grid.Column="1"
                 Name="IndividualRecipientAddressInput"
                 FontWeight="Black"
                 FontSize="20"
                 Background="Azure"
                 Visibility="Collapsed"
                 />
        <TextBox Grid.Row="4"
                 Grid.Column="1"
                 Name="IndividualRecipientPhoneInput"
                 FontWeight="Black"
                 FontSize="20"
                 Background="Azure"
                 Visibility="Collapsed"
                 />
        <Label
            Name="SenderType"
            Visibility="Visible"
            Background="Beige"
            Content="SENDER"
            FontSize="20"
            FontStyle="Italic"
            />
        <Label
            Name="RecipientType"
            Visibility="Collapsed"
            Background="Beige"
            Content="Recipient"
            FontSize="20"
            FontStyle="Italic"
            />
        <Label BorderBrush="Black"
               BorderThickness="1"
               Grid.Row="2" 
               Grid.Column="0"
               Visibility="Visible"
               Name="IndividualFirstName"
               Content="First Name:"
               />
        <Label 
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Row="3" 
            Grid.Column="0"
            Visibility="Visible"
            Name="IndividualLastName"
            Content="Last Name:"/>
        <Label
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Row="4" 
            Grid.Column="0"
            Visibility="Visible"
            Name="IndividualAddress"
            Content="Address:"/>
        <Label
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Row="1" 
            Grid.Column="0"
            Visibility="Visible"
            Name="IndividualID"
            Content="ID Number:"/>
        <Label 
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Row="5" 
            Grid.Column="0"
            Visibility="Visible"
            Name="IndividualPhone"
            Content="Phone:"/>
        <TextBox
            Name="IndividualNameInput"
            Visibility="Visible"
            FontWeight="Black"
            FontSize="20"
            Background="Azure"
            Text=""
            TextDecorations=""
            Grid.Row="2"
            Grid.Column="1"
            />
        <TextBox
            Name="IndividualLastNameInput"
            Visibility="Visible"
            FontWeight="Black"
            FontSize="20"
            Background="Azure"
            Text=""
            TextDecorations=""
            Grid.Row="3"
            Grid.Column="1"
            />
        <TextBox
            Name="IndividualAddressInput"
            Visibility="Visible"
            FontWeight="Black"
            FontSize="20"
            Background="Azure"
            Text=""
            TextDecorations=""
            Grid.Row="4"
            Grid.Column="1"
            />
        <TextBox
            Name="IndividualIDNumberInput"
            Visibility="Visible"
            FontWeight="Black"
            FontSize="20"
            Background="Azure"
            Text=""
            TextDecorations=""
            Grid.Row="1"
            Grid.Column="1"
            LostFocus="IndividualIDNumberLostFocus"
            />
        <TextBox
            Name="IndividualPhoneInput"
            Visibility="Visible"
            FontWeight="Black"
            FontSize="20"
            Background="Azure"
            Text=""
            TextDecorations=""
            Grid.Row="5"
            Grid.Column="1"
            />
        <Label
            Name="CompanyRecipientName"
            Grid.Row="1"
            Content="Company Name:"
            BorderBrush="Black"
            BorderThickness="1"
            Visibility="Collapsed"/>
        <Label
            Name="CompanyRecipientAddress"
            Grid.Row="2"
            Content="Address:"
            BorderBrush="Black"
            BorderThickness="1"
            Visibility="Collapsed"/>
        <Label
            Name="CompanyRecipientPhone"
            Grid.Row="3"
            Content="Phone:"
            BorderBrush="Black"
            BorderThickness="1"
            Visibility="Collapsed"/>
        <TextBox Grid.Row="1"
                 Grid.Column="1"
                 Name="CompanyRecipientNameInput"
                 FontWeight="Black"
                 FontSize="20"
                 Background="Azure"
                 Visibility="Collapsed"
                 />
        <TextBox Grid.Row="2"
                 Grid.Column="1"
                 Name="CompanyRecipientAddressInput"
                 FontWeight="Black"
                 FontSize="20"
                 Background="Azure"
                 Visibility="Collapsed"
                 />
        <TextBox Grid.Row="3"
                 Grid.Column="1"
                 Name="CompanyRecipientPhoneInput"
                 FontWeight="Black"
                 FontSize="20"
                 Background="Azure"
                 Visibility="Collapsed"
                 />
        <Button Click="ProccessIndividualClient"  Name="SubmitIndividualData" Content="SUBMIT"  Background="LightGray"  FontSize="20" HorizontalAlignment="Left"  Height="30" Width="95" Grid.Column="1" Margin="199,51,0,-50" Grid.Row="5" RenderTransformOrigin="0.484,0.2"/>
    </Grid>
</Window>
